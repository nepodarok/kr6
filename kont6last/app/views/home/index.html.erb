<table class = "table table-striped">
  <th>Категория</th>
  <th>Объявление</th>
  <th>Автор</th>
  <% @products.each do |product| %>
  <tr>
    <td><%= link_to product.category.name, category_path(product.category.id) %></td>
    <td><%= link_to product.name, product_path(product.id) %></td>
    <td><%= product.user.name %></td>
  </tr>
  <% end %>

</table>
