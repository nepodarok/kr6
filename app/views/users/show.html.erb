<b><%= @user.username %> - <%= link_to('Edit profile', edit_user_registration_path(current_user), class: 'btn btn-primary')%></b>
<h2><%= link_to("Create Photo", new_photo_path, class: 'btn btn-primary')%></h2>

<table class="table table-striped">

<th>Image</th>
<th>Title</th>
<th>Actions</th>

<% @user.photos.each do |photo| %>
  <tr>
    <td><%= image_tag photo.pic_url(:thumb) %></td>
    <td><%= photo.name %></td>
    <td><%= link_to "Delete", photo, method: :delete, class: 'btn btn-primary', data: { confirm: "Are you sure?"}%></td>
  </tr>
<% end %>

</table>
