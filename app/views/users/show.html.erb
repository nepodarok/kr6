<b><%= @user.username %></b>


<table class="table table-striped">

<th>Image</th>
<th>Title</th>
<th>Actions</th>

<% @user.photos.each do |photo| %>
  <tr>
    <td><%= link_to( image_tag(photo.pic_url(:thumb)), "/photos/#{photo.id}") %></td>
    <td><%= photo.name %></td>
    <td><%= link_to "Delete", photo, method: :delete, class: 'btn btn-primary', data: { confirm: "Are you sure?"} if can? :destroy, photo %> - <%= link_to "Show photo", "/photos/#{photo.id}" %> </td>
  </tr>
<% end %>

</table>
